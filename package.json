{
  "private": true,
  "name": "color-separation",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Erik Brinkman <erik.brinkman@gmail.com>",
  "license": "MIT",
  "packageManager": "yarn@3.2.4",
  "scripts": {
    "fmt": "prettier --write --cache 'pages/**/*.tsx' 'utils/*.ts' next.config.mjs tailwind.config.js postcss.config.js package.json",
    "lint:tsc": "pnpify tsc",
    "lint": "yarn lint:tsc && next lint && eslint 'pages/**/*.tsx' 'utils/*.ts'",
    "test": "jest --coverage",
    "dev": "next dev",
    "build": "pnpify next build && next export -o docs && touch docs/.nojekyll"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/file-saver": "^2.0.5",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.11",
    "@types/react": "^18.0.26",
    "eslint": "8.29.0",
    "eslint-config-next": "13.0.6",
    "jest": "^29.3.1",
    "prettier": "^2.8.0",
    "prettier-plugin-organize-imports": "^3.2.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.0.13",
    "@chakra-ui/react": "^2.4.2",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@yarnpkg/pnpify": "^4.0.0-rc.32",
    "autoprefixer": "^10.4.13",
    "file-saver": "^2.0.5",
    "framer-motion": "^7.6.19",
    "javascript-lp-solver": "^0.4.24",
    "next": "^13.0.6",
    "postcss": "^8.4.19",
    "quadprog": "^1.6.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.7.1",
    "tailwindcss": "^3.2.4"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "eslintConfig": {
    "extends": "next/core-web-vitals",
    "rules": {
      "@next/next/no-img-element": "off",
      "no-warning-comments": [
        "warn",
        {
          "terms": [
            "fixme"
          ],
          "location": "anywhere"
        }
      ]
    }
  }
}
