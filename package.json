{
  "private": true,
  "name": "color-separation",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Erik Brinkman <erik.brinkman@gmail.com>",
  "license": "MIT",
  "packageManager": "yarn@4.0.2",
  "scripts": {
    "fmt": "pnpify prettier --write --cache 'app/**/*.tsx' 'components/*.tsx' 'utils/*.ts' next.config.mjs tailwind.config.js postcss.config.js package.json",
    "lint:tsc": "pnpify tsc",
    "lint": "yarn lint:tsc && next lint && eslint 'app/**/*.tsx' 'components/*.tsx' 'utils/*.ts'",
    "test": "jest --coverage",
    "dev": "next dev",
    "build": "pnpify next build && touch docs/.nojekyll"
  },
  "devDependencies": {
    "@babel/core": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@types/d3-color": "^3.1.3",
    "@types/file-saver": "^2.0.7",
    "@types/jest": "^29.5.8",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.9.2",
    "@types/react": "^18.2.37",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "prettier-plugin-organize-imports": "^3.2.4",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.2",
    "@chakra-ui/system": "^2.6.2",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@yarnpkg/pnpify": "^4.0.1",
    "autoprefixer": "^10.4.16",
    "d3-color": "^3.1.0",
    "file-saver": "^2.0.5",
    "framer-motion": "^10.16.5",
    "javascript-lp-solver": "^0.4.24",
    "mime-types": "^2.1.35",
    "next": "^14.0.3",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-icons": "^4.12.0",
    "tailwindcss": "^3.3.5"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(d3-color)/)"
    ]
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "eslintConfig": {
    "extends": "next/core-web-vitals",
    "rules": {
      "@next/next/no-img-element": "off",
      "no-warning-comments": [
        "warn",
        {
          "terms": [
            "fixme"
          ],
          "location": "anywhere"
        }
      ]
    }
  }
}
