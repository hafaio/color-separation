{
  "private": true,
  "name": "color-separation",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Erik Brinkman <erik.brinkman@gmail.com>",
  "license": "MIT",
  "packageManager": "yarn@3.6.1",
  "scripts": {
    "fmt": "pnpify prettier --write --cache 'app/**/*.tsx' 'components/*.tsx' 'utils/*.ts' next.config.mjs tailwind.config.js postcss.config.js package.json",
    "lint:tsc": "pnpify tsc",
    "lint": "yarn lint:tsc && next lint && eslint 'app/**/*.tsx' 'components/*.tsx' 'utils/*.ts'",
    "test": "jest --coverage",
    "dev": "next dev",
    "build": "pnpify next build && touch docs/.nojekyll"
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-typescript": "^7.22.5",
    "@types/d3-color": "^3.1.0",
    "@types/file-saver": "^2.0.5",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@types/react": "^18.2.17",
    "eslint": "8.46.0",
    "eslint-config-next": "13.4.12",
    "jest": "^29.6.2",
    "prettier": "^3.0.0",
    "prettier-plugin-organize-imports": "^3.2.3",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.0",
    "@chakra-ui/react": "^2.8.0",
    "@chakra-ui/system": "^2.6.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@yarnpkg/pnpify": "^4.0.0-rc.48",
    "autoprefixer": "^10.4.14",
    "d3-color": "^3.1.0",
    "file-saver": "^2.0.5",
    "framer-motion": "^10.15.0",
    "javascript-lp-solver": "^0.4.24",
    "next": "^13.4.12",
    "postcss": "^8.4.27",
    "quadprog": "^1.6.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-icons": "^4.10.1",
    "tailwindcss": "^3.3.3"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(d3-color)/)"
    ]
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "eslintConfig": {
    "extends": "next/core-web-vitals",
    "rules": {
      "@next/next/no-img-element": "off",
      "no-warning-comments": [
        "warn",
        {
          "terms": [
            "fixme"
          ],
          "location": "anywhere"
        }
      ]
    }
  }
}
